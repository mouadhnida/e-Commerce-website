generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
}

model Item {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ItemImage   String
  name        String
  description String
  color       String[]
  price       String
}
